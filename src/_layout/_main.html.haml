!!! 5
%html
  %head
    %title
      Cogent
      = " - #{page.meta['page_title']} " if page.meta['page_title']
      = " - Projects - " + project_display_name(page.meta['project']) if page.meta['project']
      = " - Join - " + page.meta['role'] if page.meta['role']

    %meta{ :charset => "utf-8" }/

    /[if IE]
      %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge;chrome=1" }

    %meta{ :name => "robots", :content => "" }
    %meta{ :name => "keywords", :content => "Cogent, Projects, Solutions, User Experience, Design, Development, Ruby, Ruby on Rails, Java, Interaction, Melbourne, Australia, " }
    %meta{ :name => "description", :content => "Cogent creates useful software that gets results. We start with your business goals and work in an open and iterative way to craft the product. We're based in Melbourne, Australia." }
    %meta{ :name => "author", :content => "Cogent" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %script{ :src => "../js/jquery-1.10.2.min.js" }
    %script{ :src => href("../js/html5.js") }
    %script{ :type => "text/javascript", :src => "http://use.typekit.com/xkf5xsa.js" }
    %script{ :type => "text/javascript" }
      try{Typekit.load();}catch(e){}

    %script{ :type => "text/javascript", :src => "/js/application.js" }

    %link{ :rel => "stylesheet", :href => "../css/bootstrap.css" }/
    %link{ :rel => "stylesheet", :href => "../css/styles.css" }/
    %link{ :rel => "stylesheet", :href => "../css/screen.css" }/
    /[if lte IE 8]
      %script{ :type => "text/javascript", :src => href("../js/respond.js") }
      %link{ :rel => "stylesheet", :href => "../css/ie7.css" }/

  %body
    .navbar
      .col-12.col-sm-1.col-lg-1.col-offset-1.logo
        %a{:href=>"#"}
          %img{:src=>"../images/logo-black.png"}
      .col-12.col-sm-11.col-lg-9
        %ul.nav.navbar-nav.pull-right
          %li
            %a{:href=>"#"}Work
          %li
            %a{:href=>"#"}About
          %li
            %a{:href=>"#"}Join

    = yield

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-26314718-1']);
      _gaq.push(['_setDomainName', 'cogent.co']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
