!!! 5
%html
  %head
    %title
      Cogent
      = " - #{page.meta['page_title']} " if page.meta['page_title']
      = " - Projects - " + project_display_name(page.meta['project']) if page.meta['project']
      = " - Join - " + page.meta['role'] if page.meta['role']

    %meta{ :charset => "utf-8" }/

    /[if IE]
      %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge;chrome=1" }

    %meta{ :name => "robots", :content => "" }
    %meta{ :name => "keywords", :content => "Cogent, Projects, Solutions, User Experience, Design, Development, Ruby, Ruby on Rails, Java, Interaction, Melbourne, Australia, " }
    %meta{ :name => "description", :content => "Cogent creates useful software that gets results. We start with your business goals and work in an open and iterative way to craft the product. We're based in Melbourne, Australia." }
    %meta{ :name => "author", :content => "Cogent" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %script{ :src => "js/jquery-1.10.2.min.js" }
    %script{ :src => "js/jquery.color-2.1.2.min.js" }
    %script{ :src => "js/html5.js" }
    %script{ :src => "http://use.typekit.com/xkf5xsa.js" }
    %script{ :type => "text/javascript" }
      try{Typekit.load();}catch(e){}

    %script{ :type => "text/javascript", :src => "js/application.js" }
    %script{ :type => "text/javascript", :src => "js/bootstrap.min.js" }

    %link{ :rel => "stylesheet", :href => "css/bootstrap.min.css" }
    %link{ :rel => "stylesheet", :href => "css/bootstrap-responsive.min.css" }
    %link{ :rel => "stylesheet", :href => "css/styles.css" }
    %link{ :rel => "stylesheet", :href => "css/screen.css" }
    /[if lte IE 8]
      %script{ :type => "text/javascript", :src => "js/respond.js" }
      %link{ :rel => "stylesheet", :href => "css/ie7.css" }

  %body
    .container
      .row.nav-bar
        .span1
          %a.logo{:href=>"#"}
            %img{:src=>"images/logo-black.png"}
        .span11
          %ul.nav
            %li
              %a{:href=>"#"}Work
            %li
              %a{:href=>"#"}About
            %li
              %a{:href=>"#"}Join

    = yield

    .gray-background.desktop
      %section.container
        .row
          .span6.offset2
            %h2
              If you need help with a project and this sounds good to you,
              %a{:href => "#" }
                let's chat

            %h3 We'll listen to your goals, ask questions, offer ideas and be up-front on our fit to do the job.
            %br
            %table.contact
              %tr
                %td
                  %a{:href => "#"}
                    info@cogent.co
                %td
                  Level 3, 10 Queen Street
              %tr
                %td Rachel 0419373075
                %td Melbourne VIC 3000
              %tr
                %td Marty 0419373075
            %p.copyright Â© Cogent 2013  


    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-26314718-1']);
      _gaq.push(['_setDomainName', 'cogent.co']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
