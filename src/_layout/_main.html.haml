!!! 5
%html
  %head
    %title
      Cogent
      = " - #{page.meta['page_title']} " if page.meta['page_title']
      = " - Projects - " + project_display_name(page.meta['project']) if page.meta['project']
      = " - Join - " + page.meta['role'] if page.meta['role']

    %meta{ :charset => "utf-8" }/

    /[if IE]
      %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge;chrome=1" }

    %meta{ :name => "robots", :content => "" }
    %meta{ :name => "keywords", :content => "Cogent, Projects, Solutions, User Experience, Design, Development, Ruby, Ruby on Rails, Java, Interaction, Melbourne, Australia, " }
    %meta{ :name => "description", :content => "Cogent creates useful software that gets results. We start with your business goals and work in an open and iterative way to craft the product. We're based in Melbourne, Australia." }
    %meta{ :name => "author", :content => "Cogent" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %script{ :src => href("/js/jquery-1.10.2.min.js") }
    %script{ :src => href("/js/jquery.color-2.1.2.min.js") }
    %script{ :type => "text/javascript", :src => href("/js/html5.js") }
    %script{ :src => "http://use.typekit.com/xkf5xsa.js" }
    %script{ :type => "text/javascript" }
      try{Typekit.load();}catch(e){}

    %script{ :type => "text/javascript", :src => href("/js/application.js") }
    %script{ :type => "text/javascript", :src => href("/js/bootstrap.min.js") }

    %link{ :rel => "stylesheet", :href => href("/css/bootstrap.min.css") }
    %link{ :rel => "stylesheet", :href => href("/css/bootstrap-responsive.min.css") }
    %link{ :rel => "stylesheet", :href => href("/css/screen.css") }
    %link{ :rel => "stylesheet", :href => href("/css/about.css") }
    %link{ :rel => "stylesheet", :href => href("/css/eventer.css") }
    %link{ :rel => "stylesheet", :href => href("/css/readtime.css") }

    /[if lte IE 8]
      %script{ :type => "text/javascript", :src => href("/js/respond.js") }

  %body{:class => "#{page.meta['class']}"}
    .navbar-fixed-top
      .container
        .row.nav-bar
          .span2
            %a.logo{:href=> href("/") }
          .span10
            %ul.nav
              %li
                = nav_link("projects/readtime.html", "Work")
              %li
                = nav_link("about.html", "About")
              %li
                = nav_link("join.html", "Join")
    .content
      = yield

      %footer.gray-background.desktop
        .container
          .row
            .span8.offset2
              %h2
                If you need some help with a project
                %br
                and this sounds good to you,
                %a{:href => "mailto:info@cogent.co" }
                  let's chat.

              %p We'll listen to your goals, ask questions, offer ideas and be up-front on our fit to do the job.
              .row.small-font
                .span2
                  %a{:href => "mailto:info@cogent.co"} info@cogent.co
                  %br
                  Rachel 0419373075
                  %br
                  Marty 0407004570
                .span3
                  Level 3, 10 Queen Street
                  %br
                  Melbourne VIC 3000
              %p.copyright Â© Cogent 2013
      
      = include("../_partials/_mobile_footer.html.haml")
                


