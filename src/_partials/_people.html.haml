.person<>
  %a.image{ :href => photo[:set_url]}<>
    %img{ :src => photo[:url], :alt => "Person"  }<>
  %h2= person['display_name']
  %p
    = person['role']
    %br
    -if person['linkedin_url']
      %a.button.in{ :href => "http://" + person['linkedin_url'] }<> View LinkedIn profile
    -if person['twitter_id']
      %a.button.twitter{ :href => twitter_url(person['twitter_id']) }<> View Twitter stream
    -if person['blog_url']
      %a.button.blog{ :href => "http://" + person['blog_url']}<> Blog
